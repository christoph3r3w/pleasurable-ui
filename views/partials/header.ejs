<header>

	<nav class="mobile-menu">

		<button class="menu-open">
			<svg width="35px" height="35px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path d="M20 7L4 7" stroke="#1C274C" stroke-width="1.5" stroke-linecap="round"/>
				<path d="M20 12L4 12" stroke="#1C274C" stroke-width="1.5" stroke-linecap="round"/>
				<path d="M20 17L4 17" stroke="#1C274C" stroke-width="1.5" stroke-linecap="round"/>
			</svg>
		</button>

		<picture class="mobile-logo">
			<img src="./assets/images/logo.png" alt="RedPers logo">
			<source srcset="./assets/images/logo.avif" alt="RedPers logo">
			<source srcset="./assets/images/logo.webp" alt="RedPers logo">
		</picture>

		<button class="search-icon">
			<svg width="35px" height="35px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path d="M15.7955 15.8111L21 21M18 10.5C18 14.6421 14.6421 18 10.5 18C6.35786 18 3 14.6421 3 10.5C3 6.35786 6.35786 3 10.5 3C14.6421 3 18 6.35786 18 10.5Z" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
			</svg>
		</button>	

		<!--Mobile Menu Window if opened-->
		<section id="mobile-menu-window" aria-hidden="true">
		<button class="menu-exit">
			<svg width="35px" height="35px" viewBox="-0.5 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="#000000">
				<g id="SVGRepo_bgCarrier" stroke-width="0"/>
				<g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"/>
				<g id="SVGRepo_iconCarrier"> <path d="M3 21.32L21 3.32001" stroke="#0a0a0a" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/> <path d="M3 3.32001L21 21.32" stroke="#0a0a0a" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/> </g>
			</svg>
		</button>

		<div class="category-links">
			<ul>
				<li><a href="/"><span>voorpagina</span></a></li>
				<% for (key in locals.hardcodedCategories) { %>
				<li>
					<a href="/categories/<%= key %>">
						<span><%= key %></span>
					</a>
				</li>
				<%	} %>	
			</ul>
		</div>
		</section>

	</nav>

</header>